{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./out-tsc/spec",
    "module": "es2020",
    "target": "ES2022",
    "baseUrl": "tsconfig.spec",
    "types": [
      "jasmine",
      "node"
    ],
    "useDefineForClassFields": false
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "**/*.spec.ts"
  ]
}
