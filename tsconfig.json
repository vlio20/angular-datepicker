{
  "compilerOptions": {
    "target": "es5",
    "outDir": "bin",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "jasmine"
    ],
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "prebuild/app/index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "debug": true,
    "strictMetadataEmit": true
  }
}
